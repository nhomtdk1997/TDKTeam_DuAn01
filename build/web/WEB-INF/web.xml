<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.javaweb.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.javaweb.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ThemTinTucServlet</servlet-name>
        <servlet-class>com.javaweb.controller.ThemTinTucServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimChuyenBayMotChangServlet</servlet-name>
        <servlet-class>com.javaweb.controller.TimChuyenBayMotChangServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimChuyenBayKhuHoiServlet</servlet-name>
        <servlet-class>com.javaweb.controller.TimChuyenBayKhuHoiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChonChuyenBayServlet</servlet-name>
        <servlet-class>com.javaweb.controller.ChonChuyenBayServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatVeMotChieuServlet</servlet-name>
        <servlet-class>com.javaweb.controller.DatVeMotChieuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DatVeKhuHoiServlet</servlet-name>
        <servlet-class>com.javaweb.controller.DatVeKhuHoiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendMailServlet</servlet-name>
        <servlet-class>com.javaweb.controller.SendMailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ThemTinTucServlet</servlet-name>
        <url-pattern>/ThemTinTucServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimChuyenBayMotChangServlet</servlet-name>
        <url-pattern>/TimChuyenBayMotChangServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimChuyenBayKhuHoiServlet</servlet-name>
        <url-pattern>/TimChuyenBayKhuHoiServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChonChuyenBayServlet</servlet-name>
        <url-pattern>/ChonChuyenBayServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatVeMotChieuServlet</servlet-name>
        <url-pattern>/DatVeMotChieuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DatVeKhuHoiServlet</servlet-name>
        <url-pattern>/DatVeKhuHoiServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendMailServlet</servlet-name>
        <url-pattern>/SendMailServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <!-- File Upload -->
    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>file-upload</param-name>
        <param-value>
            img\portfolio\
        </param-value>
    </context-param>
    <!-- LogFilter-->
    <filter>
        <filter-name>LogFilter</filter-name>
        <filter-class>com.javaweb.service.LogFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <error-page>
        <exception-type>404</exception-type>
        <location>/Errorpage.jsp</location>
    </error-page>
    <!-- Send mail -->
    <context-param>
        <param-name>host</param-name>
        <param-value>smtp.gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>port</param-name>
        <param-value>587</param-value>
    </context-param>
    <context-param>
        <param-name>user</param-name>
        <param-value>kakaassasin123@gmail.com</param-value>
    </context-param>
    <context-param>
        <param-name>pass</param-name>
        <param-value>khongbiet@123</param-value>
    </context-param>
</web-app>
